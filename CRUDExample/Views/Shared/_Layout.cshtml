<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" /> <!--Application makes direct request to a 3rd party webaite cdnjs (content deliverying network)-->
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-brand">
                <img src="~/logo.png" width="25px" asp-append-version="true"/>
            </div>
            <ul>
                <li>
                    <a asp-controller="Persons" asp-action="Index">Persons</a>
                    <a asp-controller="Countries" asp-action="UploadFromExcel">Upload</a> 
                </li>
            </ul> 
        </div>
        <div class="page-content">
            @RenderBody()
        </div>
    </div>
@RenderSection("scripts", required: false) <!--in case some views dont have this scripts this requird section make it optional so there will be no error messages-->
</body>
</html>
