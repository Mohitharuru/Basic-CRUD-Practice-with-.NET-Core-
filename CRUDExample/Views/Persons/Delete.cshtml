@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to Persons List</a>
<h1>Delete Person</h1>
<h2>Are you Sure to Delete this Person?</h2>

<div class="center-box">
    <form method="post" asp-controller="Persons" asp-action="Delete">
        <input type="hidden" asp-for="PersonID" /> <!--this will submit the value = personID when submitted the form-->
        @*Person name*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled="disabled"/>
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>
        </div>

        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input Asp-for="Email" class="form-input" disabled /> <!--here the Type will be by default generated as text or inside the class library we can place a data annotation [DataType(DataType.EmailAddress)] after this asp-for will keep the type as email -->
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>

        @*submit button*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back"> Delete </button>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-red"></div>

        @if (ViewBag.errors != null)
        {
            <div class="text-red ml">
                <ul>
                    @foreach (string error in ViewBag.errors)
                    {
                        <li class="ml">@error</li>
                    }
                </ul>
            </div>
        }
    </form>
</div>


